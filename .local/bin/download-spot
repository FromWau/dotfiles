#!/usr/bin/env bash

save_dir="$HOME/music-triage"
url=$1

cleanup() {
    echo "Interrupt received, stopping downloads..."
    # Kill all background jobs
    pkill -P $$ # Kills all child processes of this script
    exit 1
}

ask_import() {
    read -r -p "Import now with beets [Y/n]: " response
    response=${response:-Y}

    case "$response" in
    [Yy] | [Yy][Ee][Ss])
        beet import "$save_dir" && beet fetchart && beet embedart
        ;;
    [Nn] | [Nn][Oo])
        echo "Ready to import via ´beet import $save_dir´"
        ;;
    *)
        echo "Invalid response." && ask_import
        ;;
    esac
}

trap cleanup SIGINT

# Check if zotify is installed
if ! command -v spotdl &>/dev/null; then
    echo "spotdl is not installed. Please install it via 'yay -S spotdl'"
    exit 1
fi

spotdl --user-auth \
    --bitrate auto \
    --format flac \
    --output "$save_dir/{artist}/{album}/{title}.{output-ext}" \
    'https://open.spotify.com/playlist/1QhO1lmOPLyeiwUch5a3H6?si=4rSxOcmoQBeenUWygnIS3Q'

ask_import
