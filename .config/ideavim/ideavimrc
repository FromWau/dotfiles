let mapleader=" "


""" Options
set number
" set relativenumber
set hlsearch
set ignorecase
set smartcase
set incsearch
set notimeout
set smartindent
set autoindent
set tabstop=4
set shiftwidth=4

" set history=1000
set scrolloff=15
set clipboard+=unnamedplus,unnamed,ideaput

""" Idea Options
set ideajoin
set ideastatusicon=gray
set ideavimsupport+=singleline

""" Mapping
map <leader>ue <Action>(FileStructurePopup)

nnoremap <esc> :noh<cr><esc>
nmap <C-a> ggVG

" code analysis
nmap gf <Action>(ShowUsages)
nmap gi <Action>(GotoImplementation)
nmap gs <Action>(GotoSuperMethod)
nmap gd <Action>(GotoDeclaration)

map gj <Action>(GotoNextError)
map gk <Action>(GotoPreviousError)
map ge <Action>(ShowErrorDescription)

map gh <Action>(QuickJavaDoc)
map gH <Action>(QuickActions)
"
map ga <Action>(ShowIntentionActions)

" find related
nmap <leader>ff <Action>(GotoFile)
nmap <leader>fg <Action>(FindInPath)
nmap <leader>fr <Action>(RecentFiles)


nmap <leader>cf <Action>(ReformatCode)
nmap <leader>cr <Actions>RenameElement)
nmap <leader>co <Action>(OptimizeImports)
nmap <leader>cg <Action>(Generate)


" " disabling tabs is recommended
" " Splitter actions
" " use "s" in nerdtree to open in vsplit, "i" to open in split
" map <C-w>v <Action>(SplitVertically)
